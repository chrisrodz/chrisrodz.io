---
import { useTranslations, type Locale } from '@/lib/i18n';

interface Props {
  locale: Locale;
  currentBean: string | null;
  hasMaxRating: boolean;
}

const { locale, currentBean, hasMaxRating } = Astro.props;
const { t } = useTranslations(locale);
---

<section class="coffee-why-section">
  <p class="coffee-why-text">
    {t('cafe.why.text')}
  </p>
  {
    currentBean && (
      <p class="coffee-current-info">
        <strong>{t('cafe.why.beanOfMonth').replace('{beanName}', currentBean)}</strong>
        <br />
        {hasMaxRating ? t('cafe.why.dialedIn') : t('cafe.why.dialingIn')}
      </p>
    )
  }
</section>

<style>
  .coffee-why-section {
    margin-bottom: 2rem;
    text-align: center;
    padding: 1rem 0;
  }

  .coffee-why-text {
    color: var(--pico-muted-color);
    line-height: 1.6;
    margin: 0 0 1rem 0;
    font-size: 0.9375rem;
    margin-left: auto;
    margin-right: auto;
    font-style: italic;
  }

  .coffee-current-info {
    color: var(--pico-color);
    line-height: 1.6;
    margin: 0;
    font-size: 0.9375rem;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 768px) {
    .coffee-why-section {
      margin-bottom: 1.5rem;
    }

    .coffee-why-text {
      font-size: 0.875rem;
    }

    .coffee-current-info {
      font-size: 0.875rem;
    }
  }
</style>
