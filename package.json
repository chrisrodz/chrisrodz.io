{
  "name": "chrisrodz.io",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn generate:i18n && astro dev",
    "start": "astro dev",
    "build": "yarn generate:i18n && astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "new-post": "node scripts/new-post.js",
    "generate:admin-secret": "node scripts/generate-admin-secret.js",
    "generate:i18n": "node scripts/generate-i18n-types.js",
    "validate:i18n": "node scripts/validate-translations.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "check": "yarn validate:i18n && astro check && yarn lint && yarn format:check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "db:setup": "node scripts/setup-dev-db.js",
    "db:link": "supabase link --project-ref",
    "db:migration": "supabase migration new",
    "db:types": "supabase gen types typescript --linked > src/lib/database.types.ts",
    "db:push": "supabase db push",
    "db:pull": "supabase db pull"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.4.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/vercel": "^8.2.8",
    "@nanostores/react": "^1.0.0",
    "@picocss/pico": "^2.1.1",
    "@supabase/supabase-js": "^2.74.0",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "astro": "^5.14.3",
    "markdown-it": "^14.1.0",
    "nanoid": "^5.1.6",
    "nanostores": "^1.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sanitize-html": "^2.17.0",
    "typescript": "^5.6.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "fast-xml-parser": "^5.3.0",
    "happy-dom": "^20.0.7",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "vite": "^7.1.11",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/i18n/*.json": [
      "yarn validate:i18n",
      "yarn generate:i18n",
      "git add src/lib/i18n-keys.ts",
      "prettier --write"
    ],
    "*.{js,ts,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
